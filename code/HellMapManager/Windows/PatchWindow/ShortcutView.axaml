<UserControl
  x:Class="HellMapManager.Windows.PatchWindow.ShortcutView"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:condition="using:HellMapManager.Views.Components.Condition"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:models="using:HellMapManager.Models"
  xmlns:roompicker="using:HellMapManager.Views.Components.RoomPicker"
  xmlns:vm="using:HellMapManager.Windows.EditShortcutWindow"
  d:DesignHeight="450"
  d:DesignWidth="800"
  x:DataType="models:Shortcut"
  mc:Ignorable="d">
  <StackPanel>
    <TextBlock Classes="Label" Text="主键:" />
    <Panel Classes="Content">
      <SelectableTextBlock Text="{Binding Key}" />
    </Panel>
    <TextBlock Classes="Label" Text="房间条件:" />
    <Panel Classes="Content">
      <ListBox Classes="RoomConditions Content" ItemsSource="{Binding RoomConditions}">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <condition:Condition Padding="0,2" />
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
    </Panel>
    <TextBlock Classes="Label" Text="指令:" />
    <Panel Classes="Content">
      <SelectableTextBlock Text="{Binding Command}" />
    </Panel>
    <TextBlock Classes="Label" Text="目标:" />
    <Panel Classes="Content TextArea">
      <SelectableTextBlock Text="{Binding To}" />
    </Panel>
    <TextBlock Classes="Label" Text="环境条件:" />
    <Panel Classes="Content">
      <ListBox Classes="Conditions Content" ItemsSource="{Binding Conditions}">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <condition:Condition Padding="0,2" />
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
    </Panel>
    <TextBlock Classes="Label" Text="耗时:" />
    <Panel Classes="Content">
      <SelectableTextBlock Text="{Binding Cost}" />
    </Panel>
    <TextBlock Classes="Label" Text="分组:" />
    <Panel Classes="Content">
      <SelectableTextBlock Text="{Binding Group}" />
    </Panel>
    <TextBlock Classes="Label" Text="描述:" />
    <Panel Classes="Content">
      <SelectableTextBlock Classes="TextArea" Text="{Binding Desc}" />
    </Panel>
  </StackPanel>
</UserControl>
